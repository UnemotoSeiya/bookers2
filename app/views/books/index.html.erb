<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'new', book: @booknew %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><a href="/users/<%= book.user_id %>"><%= image_tag 'default-image', size: "80x80" %></a></td>
              <td><a href="/books/<%= book.id %>"><%= book.title %></a></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>