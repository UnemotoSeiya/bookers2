<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>
  
  <p>Opinion</p>
  <%= f.text_area :body %>
  
  <div class=input>
    <%= f.submit 'Update Book' %>
  </div>
    
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", '/books' %>
  
<% end %>