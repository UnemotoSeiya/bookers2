<style>
.expanded-width {
  width: 100%;
  box-sizing: border-box;
}
.input{
  margin-bottom: 10px;
}
</style>
<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      
      <%= form_with model: @book do |f| %>
        <div class=input>
          <label>Title</label>
          <%= f.text_field :title, class: "expanded-width" %>
        </div>
        <div class=input>
          <label>Opinion</label>
          <%= f.text_area :body, class: "expanded-width" %>
        </div>
        <div class=input>
          <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
        </div>
          
        <%= link_to "Show", book_path(@book.id) %>
        |
        <%= link_to "Back", '/books' %>
        
      <% end %>
    </div>
  </div>
</div>