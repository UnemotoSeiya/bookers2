<style>
.expanded-width {
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 10px;
}
</style>
<div class="col-md-3">
      <h2>User info</h2>
      <% if @user.present? %>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <a class="btn btn-outline-secondary btn-block" href="/users/<%= @user.id %>/edit">
            <i class="fa-solid fa-user-gear"></i>
          </a>
        </div>
      <% else %>
        <%= image_tag current_user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
         </tbody>
        </table>
        <div class="row">
          <a class="btn btn-outline-secondary btn-block" href="/users/<%= current_user.id %>/edit">
            <i class="fa-solid fa-user-gear"></i>
          </a>
        </div>
      <% end %>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book do |f| %>
        <label>Title</label>
        <%= f.text_field :title, class: "expanded-width" %>
        <label>Opinion</label>
        <%= f.text_area :body, class: "expanded-width" %>
        <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
      <% end %>
    </div>